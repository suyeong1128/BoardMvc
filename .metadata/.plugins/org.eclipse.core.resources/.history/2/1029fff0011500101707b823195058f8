    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>
	<script>
		$(document).ready(function(){
			$("#exampleEmail").on('blur', function(){
				const email = $(this).val();
				const emailRegex = /^[a-zA-Z0-9]+@(naver|google|daum)\.[a-zA-Z]{2,}$/;
				
				if(email.length === 0) {
					$("#emailCheckMsg").text('').css('color', '');
					return;
				}
								
				if(!emailRegex.test(email)){
					$("#emailCheckMsg").text('올바른 이메일 형식이 아닙니다.').css('color', 'red');
				} else {
					$("#emailCheckMsg").text('').css('color', '');
				}
				
				$.ajax({
					url:"/check-email",
					method:"GET",
					data:{ email:email },
					success: function(response) {
						if(response.exists) {
							$('#emailCheckMsg').text('이미 사용 중인 이메일입니다.').css('color', 'red');
						} else {
							$("#emailCheckMsg").text('사용 가능한 이메일입니다.').css('color', 'green');
						}
					},
					error:function() {
						$('#emailCheckMsg').text('중복 체크 중 오류 발생').css('color', 'orange');
					}
				});
			});
			$("#examplePhone").on('blur', function() {
				const phone = $(this).val();
				const phoneRegex = /^01[016789]-\d{3,4}-\d{4}$/;
				
				if(phone.length === 0) {
					$("#phoneCheckMsg").text('').css('color', '');
					return;
				}
				
				if(!phoneRegex.test(phone)) {
					$("#phoneCheckMsg").text('올바른 전화번호 형식이 아닙니다. ex)010-0000-0000').css('color', 'red');
				} else {
					$("#phoneCheckMsg").text('올바른 전화번호 형식입니다.').css('color', 'green');
				}
			});
			$("#examplePassword").on('blur', function() {
				const password = $(this).val();
				const passwordRegex = /^(?=.*[a-zA-Z])(?=.*\d)(?=.*[!@#$%^&*()_+{}\[\]:;?~\\/-]).{8,20}$/;
				
				if(password.length === 0){
					$("passwordCheckMsg").text('').css('color', '');
				}
				
				if(!passwordRegex.test(password)) {
					$("#passwordCheckMsg").text('올바른 비밀번호 형식이 아닙니다.(문자와 특수문자 조합 8~20자리)');
				} else {
					$("#passwordCheckMsg").text('올바른 비밀번호 형식입니다.');	
				}
			});
			$("#exampleConfirmPassword").on('blur', function() {
				const password = $("#examplePassword").val();
				const confirmPassword = $(this).val();
				
				if(password != repeatPassword) {
					$("#confirmPwCheckMsg").text('비밀번호가 일치하지 않습니다.').css('color', 'red');
				} else {
					$("#confirmPwCheckMsg").text('비밀번호가 확인되었습니다.').css('color', 'green')
				}
			});
			$("#registButton").on('click', function(){
				const name = $("#exampleName").val().trim();
				const birth = $("#exampleBirth").val().trim();
				const nickName = $("#exampleNickName").val().trim();
				const email = $("#exampleEmail").val().trim();
				const address = $("#exampleAddress").val().trim();
				const phone = $("#examplePhone").val().trim();
				const password = $("#examplePassword").val().trim();
				const confirmPassword = $("#exampleConfirmPassword").val().trim();
				
				if(name != null && birth != null && nickName != null && email != null && address != null && phone != null && password != null && confirmPassword != null) {
					alert("회원가입을 하시겠습니까?");
				} else {
					alert("작성하지 않은 정보가 있습니다.");
				}
			});
		});
	</script>

</body>

