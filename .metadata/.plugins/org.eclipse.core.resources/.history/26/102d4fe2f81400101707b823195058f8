    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>
	<script>
		$(document).ready(function(){
			$("#exampleInputEmail").on('blur', function(){
				const email = $(this).val();
				const emailRegex = /^[a-zA-Z0-9]+@(naver | google)+\.[a-zA-z]{2,}$/;
				
				if(email.length === 0) {
					$("#emailCheckMsg").text('').css('color', '');
					return;
				}
								
				if(!emailRegex.test(email)){
					$("#emailCheckMsg").text('올바른 이메일 형식이 아닙니다.').css('color', 'red');
				} else {
					$("#emailCheckMsg").text('').css('color', '');
				}
				
				$.ajax({
					url:"/check-email",
					method:"GET",
					data:{ email:email },
					success: function(response) {
						if(response.exists) {
							$('#emailCheckMsg').text('이미 사용 중인 이메일입니다.').css('color', 'red');
						} else {
							$("#emailCheckMsg").text('사용 가능한 이메일입니다.').css('color', 'green');
						}
					},
					error:function() {
						$('#emailCheckMsg').text('중복 체크 중 오류 발생').css('color', 'orange');
					}
				});
			});
		});
	</script>

