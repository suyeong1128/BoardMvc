package com.boardMvc.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;

import com.boardMvc.dao.UserDao;
import com.boardMvc.dto.UserDto;
import com.boardMvc.service.MainService;

@Controller
public class UserController {
	
	@Autowired
	private UserDao userDao;
	
	@PostMapping("/register")
    public String register(UserDto user, Model model) {
		try {
			userDao.insertUser(user);
			return "redirect:login";
		} catch (Exception e) {
			model.addAttribute("errorMessae", "회원 가입 중 요류가 발생했습니다.");
			return "user/register";
		}
    }

    @GetMapping("/login")
    public String loginPage() {
        return "user/login"; // 로그인 페이지 경로
    }
}
