package com.boardMvc.dao;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.stereotype.Repository;

import com.boardMvc.dto.UserDto;

@Repository
public class UserDaoImpl implements UserDao{
	@Autowired
	private JdbcTemplate jdbcTemplate;
	
	@Override
	public void insertUser(UserDto user) {
		String sql = "INSERT INTO custom_user(firstName, lastName, email, password) VALUES(?, ?, ?, ?)";
		jdbcTemplate.update(sql, user.getFirstName(), user.getLastName(), user.getEmail(), user.getPassword());
	}
	
	@Override
	public void selectUserName(UserDto user) {
		String sql = "SELECT firstName, lastName FROM custom_user";
		jdbcTemplate.update(sql, user.getFirstName(), user.getLastName());
	}
}
